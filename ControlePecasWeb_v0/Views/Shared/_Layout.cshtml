<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Peças e Pneus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlePecasWeb_v0.styles.css" asp-append-version="true" />
    <style>
        :root {
            --verde-claro: #b8d8ba;
            --azul-claro: #a2d5f2;
            --azul-escuro: #0000bf; /* Variável para o azul escuro */
            --verde-lima: #96E637; /* Verde-lima mais clara */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--verde-claro);
            color: var(--azul-escuro); /* Definindo a cor do texto em azul escuro */
        }

        .navbar {
            background-color: var(--azul-claro) !important;
            border-bottom: 2px solid var(--verde-claro);
        }

        .navbar-brand, .nav-link {
            color: var(--azul-escuro) !important; /* Definindo a cor do texto da navbar em azul escuro */
            background-color: transparent; /* Removendo o fundo */
            padding: 0; /* Removendo o padding extra */
            border-radius: 0; /* Removendo borda arredondada */
        }

            .navbar-brand:hover, .nav-link:hover {
                color: var(--azul-escuro) !important; /* Mantendo a cor do texto ao passar o mouse */
            }

        .footer {
            background-color: #f0f0f0;
            padding: 10px 0;
            border-top: 2px solid var(--azul-claro);
        }

            .footer a {
                color: var(--azul-claro);
            }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            margin-top: 20px;
            border: 1px solid var(--azul-claro);
        }

        button[type="submit"], .btn-primary {
            background-color: var(--azul-claro);
            border-color: var(--verde-claro);
        }

            button[type="submit"]:hover, .btn-primary:hover {
                background-color: var(--azul-claro);
                border-color: var(--azul-claro);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle de Peças e Pneus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Condição para verificar se o usuário está autenticado -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Links exibidos após o login -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Equips" asp-action="Index">Equipamentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pecas" asp-action="Index">Peças</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pneus" asp-action="Index">Pneus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Oficinas" asp-action="Index">Oficinas</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark p-0">Logoff</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register">Registrar</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()           
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Controle de Peças e Pneus - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
